<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1V"
        android:weightSum="2"
        tools:gridSpec="1|4|#0093eeff|K:#ee8700ff:72,l|S:#00ff40ff:16,0,l:16,56,l:16,0,r"
        android:background="#F0A304"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@android:drawable/status_bar_item_background"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="15sp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2V"
            android:background="#0C788A"
            android:layout_weight="2"
            android:weightSum="2">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout3H"
                android:background="#0C788A"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="0.0dp">
                <TextView
                    android:text="Enter New Password (For your email)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lblPass"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5px"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:elevation="10px"
                    android:textColor="#B3E6EE"
                    android:layout_weight="1.1" />
                <EditText
                    android:inputType="text"
                    android:id="@+id/pass1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:layout_margin="5px"
                    android:gravity="center"
                    android:elevation="10px"
                    android:textColor="#B3E6EE"
                    android:background="#063C45" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutEmailH"
                android:background="#0C788A"
                android:layout_weight="1"
                android:weightSum="2">
                <TextView
                    android:text="Enter New TO Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lblEmail"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5px"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:elevation="10px"
                    android:textColor="#B3E6EE"
                    android:layout_weight="1.1" />
                <EditText
                    android:id="@+id/txtToNewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:layout_margin="5px"
                    android:gravity="center"
                    android:elevation="10px"
                    android:background="#063C45"
                    android:textColor="#B3E6EE"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:weightSum="2">
                <TextView
                    android:text="Enter Your Email (From email, must be office 365)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView1"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:elevation="10px"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5px" />
                <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtFromNewEmail"
                    android:layout_weight="0.9"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="5px"
                    android:background="#063C45" />
            </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linearLayout2"
              android:weightSum="2">
            <TextView
                android:text="Enter BCC Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
                android:layout_weight="1.1"
                android:layout_gravity="center_vertical"
                android:layout_margin="5px" />
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtBCCNewEmail"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5px"
                android:background="#063C45" />
          </LinearLayout>
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/linearLayout10"
              android:weightSum="2">
            <TextView
                android:text="Enter Pay Rate (hourly)"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView10"
                android:layout_weight="1.1"
                android:layout_gravity="center_vertical"
                android:layout_margin="5px" />
            <EditText
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/txtRate"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5px"
                android:background="#063C45" />
          </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutEmail1V"
            android:background="#0C788A"
            android:layout_weight="2"
            android:weightSum="2">
            <TextView
                android:text=".."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblOut"
                android:gravity="center"
                android:textColor="#B3E6EE"
                android:layout_weight="1"
                android:background="#063C45"
                android:elevation="10px"
                android:padding="5sp"
                android:maxLines="1" />
            <TextView
                android:text=".."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblOutEmail"
                android:gravity="center"
                android:textColor="#B3E6EE"
                android:background="#F5063C45"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:padding="5sp"
                android:maxLines="4" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutEmailV"
            android:background="#0C788A"
            android:weightSum="2">
            <Button
                android:text="OK"
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:textAllCaps="false" />
            <Button
                android:text="Exit"
                android:id="@+id/btnExitPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1px"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>